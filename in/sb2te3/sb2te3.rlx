#!/bin/sh
 
cat > $prefix.rlx.in <<EOF
 &control
  calculation = 'relax'
  title = 'Relaxation of $prefix structure'
  verbosity = 'high'
  restart_mode = 'from_scratch'
  outdir ='$TMP_DIR/'
  prefix ='$prefix'
  pseudo_dir = '$PSEUDO_DIR/'
  tprnfor = .TRUE.
  forc_conv_thr=1.0d-7
  etot_conv_thr=1.0d-8
 /
 &system
  ibrav = 5
  celldm(1) = 20.30491004
  celldm(4) = 0.91869632
  nat = 5
  ntyp = 2
  nbnd = $num_band
  ecutwfc = $ecutwfc
  ecutrho = $ecutrho
  occupations = 'fixed' 
  lspinorb = .TRUE.
  noncolin = .TRUE.
  starting_magnetization = 0.0
 /
 &electrons
  electron_maxstep = 100
  conv_thr = 1.0d-8
  mixing_mode = 'plain'
  mixing_beta = 0.3d0
  diagonalization = 'david'
  diago_full_acc = .TRUE.
 /
 &ions
  ion_dynamics = 'bfgs'
  upscale = 20.0
 /
ATOMIC_SPECIES
 Sb 121.76000  $pseudo_sb
 Te 127.60000  $pseudo_te
ATOMIC_POSITIONS {angstrom}
 Te 0.00000000 0.00000000  0.00000000
 Te 0.00000000 0.00000000  6.75177310
 Sb 0.00000000 0.00000000 12.43680523
 Sb 0.00000000 0.00000000 18.91211222
 Te 0.00000000 0.00000000 24.59714436
K_POINTS {automatic}
 $num_kx $num_ky $num_kz 0 0 0
EOF

$PW_COMMAND < $prefix.rlx.in > $prefix.rlx.out
check_failure $?
$ECHO " done"

